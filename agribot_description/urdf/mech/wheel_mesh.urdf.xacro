<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:macro name="wheel_mesh" params="
      mesh_file parent joint_name link_name xyz rpy axis
      mass com
      ixx iyy izz ixy ixz iyz">

    <link name="${link_name}">

      <inertial>
        <origin xyz="${com}" rpy="0 0 0"/>
        <mass value="${mass}"/>
        <inertia
          ixx="${ixx}" iyy="${iyy}" izz="${izz}"
          ixy="${ixy}" ixz="${ixz}" iyz="${iyz}"/>
      </inertial>

      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="${mesh_file}" scale="0.001 0.001 0.001"/>
        </geometry>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="1.57 0 0"/>
        <geometry>
          <cylinder length="0.045" radius="0.052" />
        </geometry>
      </collision>
      
    </link>

    <joint name="${joint_name}" type="continuous">
      <parent link="${parent}"/>
      <child link="${link_name}"/>
      <origin xyz="${xyz}" rpy="${rpy}"/>
      <axis xyz="${axis}"/>
    </joint>
  </xacro:macro>

</robot>
